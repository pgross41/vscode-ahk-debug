{
  "version": "2.0.0",
  "type": "shell",
  "command": "npm",
  "args": ["run", "--silent"],
  "options": {
    "env": {
      "VSCODE_DEBUG_PORT": "4711"
    }
  },
  // "showOutput": "silent",
  "tasks": [
    {
      "label": "compile",
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "test",
      "group": "test"
    }
  ]
}
